<!-- SizeSelectionWindow.xaml (nouvelle fenêtre) -->
<Window x:Class="Snake.SizeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Grid Size" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Select Grid Size" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Width:" VerticalAlignment="Center" Width="80"/>
            <Slider x:Name="WidthSlider" Minimum="10" Maximum="50" Value="38" Width="200" TickFrequency="1" TickPlacement="BottomRight"/>
            <TextBlock x:Name="WidthValue" Text="38" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Height:" VerticalAlignment="Center" Width="80"/>
            <Slider x:Name="HeightSlider" Minimum="10" Maximum="30" Value="22" Width="200" TickFrequency="1" TickPlacement="BottomRight"/>
            <TextBlock x:Name="HeightValue" Text="22" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <Button x:Name="StartButton" Content="Start Game" HorizontalAlignment="Center" Padding="20,5" Click="StartButton_Click"/>
    </StackPanel>
</Window>

